<?xml version="1.0" encoding="utf-8"?>
<hu.moksony.statelayout.StateLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/stateLayout"
    app:sl_mode="layer_on_content"
    android:layout_height="match_parent">

    <ListView
        android:id="@+id/state_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:id="@+id/state_loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#90000000">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/state_network_error"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="network error"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
</hu.moksony.statelayout.StateLayout>